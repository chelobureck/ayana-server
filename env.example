# FastAPI
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
APP_CORS_ORIGINS=*

# OpenAI-compatible endpoint (LLM)
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openrouter.ai/v1   # or your proxy
OPENAI_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
OPENAI_TIMEOUT=60

# Database (Postgres)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aitutor

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=600

# Firebase (optional)
FIREBASE_PROJECT_ID=
FIREBASE_ENABLED=false
# If verifying on server, provide the Google certs JWKS URL or use firebase_admin SDK later

# Google OAuth (verify ID token on backend)
GOOGLE_CLIENT_ID=

# Security
JWT_SECRET=dev-secret-change-me
JWT_ALG=HS256 