# FastAPI
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
APP_CORS_ORIGINS=*

# LLM provider (Groq-compatible OpenAI API)
# Если используете Groq:
#   OPENAI_BASE_URL=https://api.groq.com/openai/v1
#   Укажите GROQ_API_KEY или OPENAI_API_KEY
OPENAI_API_KEY=
GROQ_API_KEY=
OPENAI_BASE_URL=https://api.groq.com/openai/v1
OPENAI_MODEL=llama-3.1-8b-instant
OPENAI_TIMEOUT=60

# Database (Postgres)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aitutor

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=600

# Firebase (optional)
FIREBASE_PROJECT_ID=
FIREBASE_ENABLED=false
# If verifying on server, provide the Google certs JWKS URL or use firebase_admin SDK later

# Google OAuth (verify ID token on backend)
GOOGLE_CLIENT_ID=

# JWT Security
JWT_SECRET=dev-secret-change-me
JWT_ALG=HS256
JWT_EXPIRE_HOURS=24

# Email settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Verification token settings
VERIFICATION_TOKEN_LENGTH=7
VERIFICATION_TOKEN_EXPIRE_SECONDS=45 